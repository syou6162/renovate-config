{
    "extends": [
        "config:base"
    ],
    "timezone": "Asia/Tokyo",
    "schedule": [
        "every weekend"
    ],
    "labels": [
        "renovate"
    ],
    "dockerfile": {
        "fileMatch": [
            "(^|/)Dockerfile-[^/]*$"
        ]
    },
    "postUpdateOptions": [
        "yarnDedupeHighest",
        "gomodTidy"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "^@types/"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        },
        {
            "matchPackagePatterns": [
                "^eslint"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        },
        {
            "matchPackageNames": [
                "aws-sdk",
                "firebase"
            ],
            "automerge": true,
            "matchUpdateTypes": [
                "patch",
                "pin",
                "digest"
            ]
        },
        {
            "groupName": "linters",
            "extends": [
                "packages:linters"
            ],
            "packageNames": [
                "prettier"
            ],
            "packagePatterns": [
                "^@typescript-eslint/"
            ]
        },
        {
            "groupName": "jest",
            "matchSourceUrlPrefixes": [
                "https://github.com/facebook/jest",
                "https://github.com/kulshekhar/ts-jest"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "groupName": "devDependencies (non-major)",
            "automerge": true
        }
    ]
}